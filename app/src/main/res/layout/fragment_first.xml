<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppIntro.FirstFragment"
    android:orientation="vertical"
    android:background="@drawable/screen1"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/screen1_img"
        android:layout_width="212dp"
        android:layout_height="181dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:contentDescription="@string/screen1_img"
        android:src="@drawable/grocery"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/title_intro"
        android:layout_width="96dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="@string/title1"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc1_intro"
        android:layout_width="350dp"
        android:layout_height="114dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/arbutus"
        android:gravity="center"
        android:text="@string/description1"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/intro_next1"
        android:layout_width="73dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_weight="1"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center_horizontal"
        android:text="@string/next"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold" />
</LinearLayout>