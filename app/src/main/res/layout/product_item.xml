<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foodImg"
                android:layout_width="126dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/food_img"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/paneer" />

            <TextView
                android:id="@+id/foodName"
                android:layout_width="241dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="135dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="18dp"
                android:text="@string/paneer_burger"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foodDesc"
                android:layout_width="270dp"
                android:layout_height="82dp"
                android:layout_below="@+id/foodName"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="134dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="13dp"
                android:text="@string/_21_pieces_of_kfcs_secret_formular_chicken_with_an_option_to_have_it_zinger_or_normal"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/foodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="135dp"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="172dp"
                android:text="@string/_400kes"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/foodCartBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="251dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="5dp"
        android:text="@string/add_to_cart"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        app:strokeColor="@color/colorPrimary" />


</RelativeLayout>